<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appfaculdade">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="App OPE"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".CadastroFornecedorActivity"
            android:label="Cadastro Fornecedor"
            android:parentActivityName=".MainActivity" />
        <!-- Parent Activity é a atividade qua vai ser chamanda quando clicamos em voltar -->
        <activity
            android:name=".CadastroProdutoActivity"
            android:label="Cadastro Produto"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ConfiguracoesActivity"
            android:label="Configurações"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CadastroUsuarioActivity"
            android:label="Cadastro Usuário"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TelainicialActivity" />
        <activity android:name=".DebugActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>